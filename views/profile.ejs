<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SocialBuddy</title>
    <!-- Add Bootstrap CSS link here -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./css/style.css" />
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
          <a class="navbar-brand" href="/posts?id=<%= user.id %>"
            >SocialBuddy</a
          >
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <a class="nav-link" href="/posts?id=<%= user.id %>">Home</a>
              </li>
              <span class="nav-item ml-auto">
                <a class="nav-link text-white" aria-expanded="false"
                  ><%= user.username %></a
                >
              </span>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <div class="container mt-5">
      <div class="row">
        <div class="col-md-4">
          <!-- Informasi Profil -->
          <div class="card">
            <a
              href="/users/profile/update?id=<%= user.id %>"
              type="button"
              class="btn btn-light btn-edit-profile"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                fill="currentColor"
                class="bi bi-pencil-square mb-1"
                viewBox="0 0 16 16"
              >
                <path
                  d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"
                />
                <path
                  fill-rule="evenodd"
                  d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"
                />
              </svg>
            </a>
            <img
              src="<%= user.image %>"
              class="card-img-top"
              alt="Profile Picture"
            />
            <div class="card-body">
              <div class="row">
                <div class="col-2">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    fill="currentColor"
                    class="bi bi-person mb-1 ms-2"
                    viewBox="0 0 16 16"
                  >
                    <path
                      d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z"
                    />
                  </svg>
                </div>
                <div class="col-10">
                  <h5 class="card-title"><%= user.username %></h5>
                </div>
                <div class="col-2">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    fill="currentColor"
                    class="bi bi-envelope-at mb-1 ms-2"
                    viewBox="0 0 16 16"
                  >
                    <path
                      d="M2 2a2 2 0 0 0-2 2v8.01A2 2 0 0 0 2 14h5.5a.5.5 0 0 0 0-1H2a1 1 0 0 1-.966-.741l5.64-3.471L8 9.583l7-4.2V8.5a.5.5 0 0 0 1 0V4a2 2 0 0 0-2-2H2Zm3.708 6.208L1 11.105V5.383l4.708 2.825ZM1 4.217V4a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v.217l-7 4.2-7-4.2Z"
                    />
                    <path
                      d="M14.247 14.269c1.01 0 1.587-.857 1.587-2.025v-.21C15.834 10.43 14.64 9 12.52 9h-.035C10.42 9 9 10.36 9 12.432v.214C9 14.82 10.438 16 12.358 16h.044c.594 0 1.018-.074 1.237-.175v-.73c-.245.11-.673.18-1.18.18h-.044c-1.334 0-2.571-.788-2.571-2.655v-.157c0-1.657 1.058-2.724 2.64-2.724h.04c1.535 0 2.484 1.05 2.484 2.326v.118c0 .975-.324 1.39-.639 1.39-.232 0-.41-.148-.41-.42v-2.19h-.906v.569h-.03c-.084-.298-.368-.63-.954-.63-.778 0-1.259.555-1.259 1.4v.528c0 .892.49 1.434 1.26 1.434.471 0 .896-.227 1.014-.643h.043c.118.42.617.648 1.12.648Zm-2.453-1.588v-.227c0-.546.227-.791.573-.791.297 0 .572.192.572.708v.367c0 .573-.253.744-.564.744-.354 0-.581-.215-.581-.8Z"
                    />
                  </svg>
                </div>
                <div class="col-10">
                  <p class="card-text"><%= user.email %></p>
                </div>
              </div>
            </div>
            <div class="card-footer">
              <div class="row">
                <div class="col-2">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    fill="currentColor"
                    class="bi bi-person-x mb-1 ms-2"
                    viewBox="0 0 16 16"
                  >
                    <path
                      d="M11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0ZM8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4Zm.256 7a4.474 4.474 0 0 1-.229-1.004H3c.001-.246.154-.986.832-1.664C4.484 10.68 5.711 10 8 10c.26 0 .507.009.74.025.226-.341.496-.65.804-.918C9.077 9.038 8.564 9 8 9c-5 0-6 3-6 4s1 1 1 1h5.256Z"
                    />
                    <path
                      d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7Zm-.646-4.854.646.647.646-.647a.5.5 0 0 1 .708.708l-.647.646.647.646a.5.5 0 0 1-.708.708l-.646-.647-.646.647a.5.5 0 0 1-.708-.708l.647-.646-.647-.646a.5.5 0 0 1 .708-.708Z"
                    />
                  </svg>
                </div>
                <div class="col-10">
                  <a
                    href="javascript:void(0)"
                    data-user-id="<%= user.id %>"
                    id="deleteAccount"
                    class="link-underline link-underline-opacity-0 text-black"
                    >Delete Account</a
                  >
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-8">
          <!-- Postingan Pengguna -->
          <div class="card">
            <div class="card-body">
              
              <h5 class="card-title">
                Postingan
                <svg
                xmlns="http://www.w3.org/2000/svg"
                width="30"
                height="30"
                fill="currentColor"
                class="bi bi-mailbox-flag pb-1"
                viewBox="0 0 16 16"
                >
                <path
                d="M10.5 8.5V3.707l.854-.853A.5.5 0 0 0 11.5 2.5v-2A.5.5 0 0 0 11 0H9.5a.5.5 0 0 0-.5.5v8h1.5ZM5 7c0 .334-.164.264-.415.157C4.42 7.087 4.218 7 4 7c-.218 0-.42.086-.585.157C3.164 7.264 3 7.334 3 7a1 1 0 0 1 2 0Z"
                />
                <path
                d="M4 3h4v1H6.646A3.99 3.99 0 0 1 8 7v6h7V7a3 3 0 0 0-3-3V3a4 4 0 0 1 4 4v6a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V7a4 4 0 0 1 4-4Zm0 1a3 3 0 0 0-3 3v6h6V7a3 3 0 0 0-3-3Z"
                />
              </svg>
            </h5>
            <!-- Daftar postingan pengguna -->
            <% posts.forEach(post => { %>
              <div class="card">

                <ul class="list-group">
                  <li class="list-group-item">
                    <a
                      href="#"
                      class="btn-edit link-underline link-underline-opacity-0 <%= post.userId === user.id ? 'edit-options' : ''%>"
                      
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="30"
                        height="30"
                        fill="currentColor"
                        class="bi bi-three-dots"
                        viewBox="0 0 16 16"
                      >
                        <path
                          d="M3 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z"
                        />
                      </svg>
                    </a>
                    <div class="card-edit">
                      <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                          <a href="/users/profile/update/post?id=<%= user.id%>&postId=<%= post.id %>" class="edit-option fs-6 link-underline link-underline-opacity-0 link-body-emphasis"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                            <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
                          </svg>  Edit</a></li>
                        </li>
                        <li class="list-group-item">
                          <a href="/users/profile/delete/post?id=<%= user.id %>&postId=<%= post.id %>" class="edit-option fs-6 link-underline link-underline-opacity-0 link-body-emphasis delete-post" onclick="confirmDelete(event)"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                          </svg>  Delete</a>
                        </li>
                      </ul>
                    </div>
  
                    <div class="mt-5">
                      <% if (post.image !== null) { %>
                      <img
                        src="<%= post.image %>"
                        alt="image-post"
                        class="img-fluid py-3"
                      />
                      <%} else { %> <% } %>
                      <p><%= post.textPost %></p>
                    </div>
  
                  </li>
                </ul>
              </div>
              <% })%>
            </div>
          </div>
        </div>
      </div>
    </div>

    <footer class="bg-light text-center mt-4 py-3">
      &copy; 2023 SocialBuddy
    </footer>

    <!-- Add Bootstrap JS scripts here -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>

    <script>
      const deleteButton = document.getElementById("deleteAccount");

      // Tambahkan event listener untuk mengonfirmasi penghapusan
      deleteButton.addEventListener("click", function (event) {
        event.preventDefault();

        const userId = deleteButton.getAttribute("data-user-id");
        const confirmation = confirm(
          "Are you sure to delet this account permanently?"
        );

        // Jika pengguna mengonfirmasi penghapusan, arahkan ke URL penghapusan
        if (confirmation) {
          window.location.href = `/users/delete?id=${userId}`;
        }
      });

      // Fungsi untuk menampilkan/menyembunyikan opsi Edit dan Hapus
      function toggleEditOptions(event) {
      event.stopPropagation(); // Mencegah "event" dari menyebar ke elemen lain
      const card = event.target.closest('.card');
      const editOptions = card.querySelector('.card-edit');
      editOptions.style.display = editOptions.style.display === 'block' ? 'none' : 'block';
  }

      // Fungsi untuk konfirmasi penghapusan
      function confirmDelete(event) {
          event.stopPropagation(); // Mencegah "event" dari menyebar ke elemen lain
          if (confirm('Are you sure delete this post?')) {
              // Hapus postingan atau lakukan tindakan lain sesuai kebutuhan
              // ...

              // Sembunyikan opsi Edit dan Hapus setelah tindakan selesai
              const card = event.target.closest('.card');
              const editOptions = card.querySelector('.card-edit');
              editOptions.style.display = 'none';
          }
      }

      // Menambahkan event listener ke elemen dengan kelas "btn-edit"
      document.querySelectorAll('.btn-edit').forEach(btn => {
          btn.addEventListener('click', function (event) {
              event.preventDefault();
              toggleEditOptions(event);
          });
      });

      // Menambahkan event listener ke elemen dokumen untuk menutup opsi Edit dan Hapus saat mengklik di luar opsi tersebut
      document.addEventListener('click', function (event) {
          const editOptions = document.querySelectorAll('.card-edit');
          editOptions.forEach(option => {
              option.style.display = 'none';
          });
      });
    </script>
  </body>
</html>
