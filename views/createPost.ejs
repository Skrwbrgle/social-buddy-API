<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SocialBuddy</title>
    <!-- Add Bootstrap CSS link here -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
          <a class="navbar-brand" href="/posts?id=<%= user.id %>"
            >SocialBuddy</a
          >
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <a class="nav-link" href="/posts?id=<%= user.id %>">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Profile</a>
              </li>
              <li class="nav-item dropdown">
                <a
                  class="nav-link dropdown-toggle"
                  href="#"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                  id="selectedUsername"
                  ><%= user.username %>
                </a>
                <ul class="dropdown-menu dropdown-menu-light">
                  <% users.forEach(user => { %>
                  <li>
                    <a
                      class="dropdown-item"
                      href="/posts?id=<%= user.id %>"
                      onclick="updateSelectedUsername('<%= user.username %> ')"
                      ><%= user.username %></a
                    >
                  </li>
                  <% }); %>
                </ul>
              </li>
              <li class="nav-item">
                <a href="/users/signup" class="nav-link">Sign Up</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <div class="container mt-5">
      <h1>Create Post</h1>
      <form action="/posts/create?id=<%= user.id %>" method="post">
        <div class="mb-3">
          <label for="textPost" class="form-label">Isi Post</label>
          <textarea
            class="form-control"
            id="textPost"
            name="textPost"
            rows="4"
            required
          ></textarea>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Upload Foto (opsional)</label>
          <input type="url" class="form-control" id="image" name="image" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>

    <footer class="bg-light text-center mt-4 py-3">
      &copy; 2023 SocialBuddy
    </footer>

    <!-- Add Bootstrap JS scripts here -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
